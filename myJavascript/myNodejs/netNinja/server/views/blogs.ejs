<!DOCTYPE html>
<html lang="en">
<head>
   <%- include('./partial/head.ejs') %>
</head>
<body>
    <%- include('./partial/nav.ejs') %>
    <%- include('./partial/banner.ejs') %>

    <div class="blogs">
        <h2>All blogs</h2>
        <% if (blogs.length>0) { %>
            <% blogs.map((item)=>{ %>
                <h3><%= item.title %></h3>
                <p><%= item.snippets %></p>
                <p><%= item.body %></p>
            <% }) %>   
        <% } else  { %>
            <h3>No blog posts yet</h3>
        <% } %>
    </div>

    <%- include('./partial/footer.ejs') %>
    
</body>
</html>